<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- The name line -->

        <TextView
            android:id="@+id/honoric_prefix"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HonorPrefix" />

        <TextView
            android:id="@+id/given_name"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Given" />

        <TextView
            android:id="@+id/middle_name"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Middle" />

        <TextView
            android:id="@+id/personal_name"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Name" />

        <TextView
            android:id="@+id/honoric_suffix"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HonorSuf" />
    </LinearLayout>

    <TextView
        android:id="@+id/nickname"
        style="@style/stylePeronsalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nickname" />

    <TextView
        android:id="@+id/tagline"
        style="@style/stylePeronsalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tagline" />

    <TextView
        android:id="@+id/gplus_id"
        style="@style/stylePeronsalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="G+ ID" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- The age line -->

        <TextView
            android:id="@+id/birthday"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Birthday" />

        <TextView
            android:id="@+id/min_age"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Min Age" />

        <TextView
            android:id="@+id/max_age"
            style="@style/stylePeronsalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Max Age" />
    </LinearLayout>

    <TextView
        android:id="@+id/emails"
        style="@style/stylePeronsalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emails" />

    <TextView
        android:id="@+id/links"
        style="@style/stylePeronsalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Links" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- The links/places/organization line -->

        <TextView
            android:id="@+id/places_lived"
            style="@style/stylePeronsalInformation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Places Lived" />

        <TextView
            android:id="@+id/organizations"
            style="@style/stylePeronsalInformation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Organizations" />
    </LinearLayout>

</LinearLayout>